{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "postUpgradeTasks": {
    "commands": [
      "ng update @angular/core@18 @angular/cli@18 --force"
    ],
    "fileFilters": [
      "package.json",
      "package-lock.json"
    ],
    "executionMode": "update"
  }
}
